    {
        LCDML_BUTTON_resetRight();    LCDML_BUTTON_resetDown(); g_button_value5--;    
        if(g_button_value5 == 255)    g_button_value5 = 0;
        if(g_button_value5 <=  0)     g_button_value5 = 100;    
        sprintf(data8, "%03d HR", g_button_value5); 
